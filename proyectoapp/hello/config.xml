<?xml version='1.0' encoding='utf-8'?>
<widget id="com.upb.hello" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Tertris</name>
    <description>
        Juego basado en Tetris
    </description>
    <author email="julian.restrepoc@gmail.com" href="https://sapnupuas.azurewebsites.net">
            Julian Restrepo C
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="www/img/logo.png"/>
    <preference name="loadUrlTimeoutValue" value="100000" />
    <engine name="android" spec="^7.1.4" />
</widget>
